{
  "manifest_version": 3,
  "name": "Privacy-First Gemini Nano",
  "version": "1.1.0",
  "description": "Local, private AI assistant using Gemini Nano via Chrome AI",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "contextMenus"
  ],
  "optional_permissions": [
    "aiLanguageModelOriginTrial"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Nano Assistant"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "138",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
}
