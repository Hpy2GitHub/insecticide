{
  "manifest_version": 2,
  "name": "Pesticide for Firefox",
  "version": "1.0",
  "description": "Outline all elements on the page to visualize layout",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon48.svg"
    },
    "default_title": "Toggle Insecticide"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "styles.css"
  ]
}
