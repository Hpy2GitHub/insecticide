{
  "manifest_version": 2,
  "name": "Pesticide for Firefox",
  "version": "1.0",
  "description": "Outline all elements on the page to visualize layout",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": {
      "48": "icons/icon48-active.png"
    },
    "default_title": "Toggle Pesticide (Ctrl+Shift+P)"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "toggle-pesticide": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Toggle element borders"
    }
  }
}
