{
  "manifest_version": 3,
  "name": "Insecticide for Firefox",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension@example.com",
      "strict_min_version": "146.1",
      "data_collection_permissions": {
        "technical": false,
        "personal": false
      }
    }
    },
    "description": "Outline all elements on the page to visualize layout",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png" 
    },
    "default_title": "Toggle Insecticide (Ctrl+Shift+U)"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "toggle-insecticide": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Toggle element borders"
    }
  }
}
