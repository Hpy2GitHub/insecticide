{
  "manifest_version": 3,
  "name": "Insecticide for Firefox",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension@example.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "technical": false,
        "personal": false
      }
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon48-16.png",
      "32": "icons/icon48-32.png",
      "48": "icons/icon48-48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
